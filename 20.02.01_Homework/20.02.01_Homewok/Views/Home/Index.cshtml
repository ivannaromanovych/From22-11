@model IList<HomeWorkCRUD.Models.ProductModel>

<h1 class="mt-3 text-center">
    Bakery
</h1>

<a href="@Url.Action("Add", "Home")" class="btn btn-success" style="margin-bottom: 5px">Додати продукт</a>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-lg-3">
            <div class="card w-auto p-3">
                <img class="card-img-top" src=@item.Image style="height: 100px">
                <div class="card-body">
                    <p class="card-text">@item.Name</p>
                    <a class="btn btn-danger" href="@Url.Action("Delete", "Home", new { id=item.Id})">Delete</a>
                    <a class="btn btn-info" href="@Url.Action("Edit", "Home", new { id=item.Id})">Edit</a>
                </div>
            </div>
        </div>
    }
</div>
<a href="@Url.Action("Update", "Home")" class="btn btn-dark" style="margin-bottom: 5px">Оновити список</a>