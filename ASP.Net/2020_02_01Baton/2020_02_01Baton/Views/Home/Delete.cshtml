@model _2020_02_01Baton.Models.ProductModel

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<div>
    <h4>Do you really want to delete this product from your products list?</h4>
    <hr />
    <dl class="dl-horizontal">
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dd>
            <image src="@Model.Image"/>
        </dd>

    </dl>
</div>
<form action="@Url.Action("Delete", "Home")" method="post">
    <input type="hidden" name="id" value="@Model.Id"/>
    <input type="submit" class="btn btn-danger" value="Yes" />
    <a href="@Url.Action("Index", "Home")" class="btn btn-success" value="Yes">No</a>
</form>

